<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="5dp"
    android:id="@+id/view_holder_layout"
    android:layout_marginBottom="30dp"
    android:background="@color/purple_200"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/holder_imgview"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_baseline_account_circle_24"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/holder_txtview_item_type"
        android:layout_marginTop="5dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:background="#80757ED8"
        android:layout_centerHorizontal="true"
        android:backgroundTintMode="screen"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/holder_txtview_item_type"
        android:layout_toRightOf="@id/holder_imgview"
        android:hint="Name of Funding Agency"
        android:textSize="18sp"
        android:id="@+id/holder_item_name"
        android:layout_margin="5dp"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/holder_item_name"
        android:layout_toRightOf="@id/holder_imgview"
        android:id="@+id/holder_item_founder"
        android:hint="founder of agency"
        android:layout_margin="3dp"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/holder_item_founder"
        android:layout_toRightOf="@id/holder_imgview"
        android:id="@+id/holder_item_phn_no"
        android:hint="phone Number"
        android:layout_margin="3dp"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/holder_item_phn_no"
        android:layout_toRightOf="@id/holder_imgview"
        android:id="@+id/holder_item_state"
        android:hint="State"
        android:layout_margin="3dp"
        android:padding="5dp"
        />
    <!--        android:backgroundTint="#808080"-->
    <LinearLayout
        android:id="@+id/linearlayout_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="150dp"
        android:gravity="fill_horizontal"
        android:padding="5dp"
        android:background="#993F51B5">

        <Button
            android:id="@+id/btn_user_verify"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="200dp"
            android:layout_marginBottom="5dp"
            android:text="Verify User"
            android:textColor="#ffffff"/>
    </LinearLayout>


</RelativeLayout>
