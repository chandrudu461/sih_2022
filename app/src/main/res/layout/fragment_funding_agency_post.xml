<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Problem Statement:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Description:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problemStatement" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="75dp"
        android:layout_height="17dp"
        android:layout_marginTop="36dp"
        android:text="Budget:"
        app:layout_constraintEnd_toStartOf="@+id/budget"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="75dp"
        android:layout_height="17dp"
        android:layout_marginTop="40dp"
        android:text="Duration:"
        app:layout_constraintEnd_toStartOf="@+id/duration"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="75dp"
        android:layout_height="17dp"
        android:layout_marginTop="56dp"
        android:text="Deadline:"
        app:layout_constraintEnd_toStartOf="@+id/deadline"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="75dp"
        android:layout_height="17dp"
        android:layout_marginTop="52dp"
        android:text="Eligibility:"
        app:layout_constraintEnd_toStartOf="@+id/eligibility"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="85dp"
        android:layout_height="19dp"
        android:layout_marginTop="52dp"
        android:text="Deliverables:"
        app:layout_constraintEnd_toStartOf="@+id/deliverables"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/problemStatement"
        android:layout_width="362dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:ems="10"

        android:hint="Problem Statement"
        android:inputType="textPersonName"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/description"
        android:layout_width="362dp"
        android:layout_height="38dp"
        android:ems="10"

        android:hint="Description"
        android:inputType="textPersonName"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/budget"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"

        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Budget"
        android:inputType="textPersonName"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <EditText
        android:id="@+id/duration"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"

        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Duration"
        android:inputType="textPersonName"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budget" />

    <EditText
        android:id="@+id/deadline"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"

        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Deadline"
        android:inputType="textPersonName"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration" />

    <EditText
        android:id="@+id/eligibility"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"

        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Eligibility"
        android:inputType="textPersonName"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deadline" />

    <EditText
        android:id="@+id/deliverables"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"

        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Deliverables"
        android:inputType="textPersonName"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eligibility" />

    <Button
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverables"
        app:layout_constraintVertical_bias="0.473" />
</androidx.constraintlayout.widget.ConstraintLayout>